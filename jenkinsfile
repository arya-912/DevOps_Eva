pipeline {
	agent any

	tools {
		maven 'Maven01'
	}

	stages {
		stage('Build') {
			steps {
				sh 'nvm clean package'
			}
		}
		stage('Test') {
			steps {
				sh 'nvm test'
			}
		}
	}
}